@model ShopNuocHoa.Models.category

@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout1.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Delete</title>
</head>
<body>
    <div class="card mb-4">
        <div class="card-header">
            <h2 style="margin-left:40%">DELETE</h2>
        </div>
        <div class="card-body">

            <table class="table">
                <tr>
                    <th>
                        Category ID
                    </th>
                    <th>
                        Category Name
                    </th>                   
                    <th></th>
                </tr>
                <tr>
                    <td>
                        @Html.DisplayFor(model => model.id_category)
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.name_category)
                    </td>
                  
                    <td>
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-actions no-color">

                                <input type="submit" onclick="return confirm('Are you sure you want to delete this item?');" value="Delete" class="btn btn-default" style="background-color:#0094ff" />
                                @Html.ActionLink("Back to List", "Index")
                            </div>
                        }
                    </td>

                </tr>

            </table>

        </div>
    </div>
</body>
</html>
