@model ShopNuocHoa.Models.product

@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout1.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Delete</title>
</head>
<body>
    <div class="card mb-4">
        <div class="card-header">
            <h2 style="margin-left:40%">DELETE</h2>
        </div>
        <div class="card-body">

            <table class="table">
                <tr>
                    <th>
                        Category
                    </th>
                    <th>
                        Product Name
                    </th>
                    <th>
                        Image
                    </th>
                    <th>
                        Old price
                    </th>
                    <th>
                        New price
                    </th>
                    <th>
                        Quantity
                    </th>
                    <th>
                        Description
                    </th>
                  
                    <th></th>
                </tr>
                <tr>
                    <td>
                        @Html.DisplayFor(model => model.category.name_category)
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.name_product)
                    </td>
                    <td>
                        @{
                            string path = "~/Images/" + Model.image;
                        }
                        <img class="default-img" src="@Url.Content(path)" height="50" width="50" alt="#">
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.old_price)
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.new_price)
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.quantity)
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.Description)
                    </td>
                    <td>
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()

                        <div class="form-actions no-color">
                           
                            <input type="submit" onclick="return confirm('Are you sure you want to delete this item?');" value="Delete" class="btn btn-default" style="background-color:#0094ff" />
                            @Html.ActionLink("Back to List", "Index")
                        </div>
                        }
                    </td>

                </tr>

            </table>

        </div>
    </div>
</body>

</html>
