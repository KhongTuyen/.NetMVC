@model IEnumerable<ShopNuocHoa.Models.product>

@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout1.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
   
        <main>
            <div class="container-fluid px-4">
                <h1 class="mt-4">Product</h1>
                <ol class="breadcrumb mb-4">
                    <li class="breadcrumb-item"><a href="index.html">Dashboard</a></li>
                    <li class="breadcrumb-item active">Product</li>
                </ol>

                <div class="card mb-4">
                    <div class="card-header">
                        <i class="fas fa-table me-1"></i>
                        DataTable Product
                    </div>
                    <div class="card-body">

                        <table class="table">
                            <tr>
                                <th>
                                    ID
                                </th>
                                <th>
                                    Name
                                </th>
                                <th>
                                    Image
                                </th>
                                <th>
                                    Old price
                                </th>
                                <th>
                                    New price
                                </th>
                                <th>
                                    Quantity
                                </th>
                                <th>
                                    Description
                                </th>
                                <th>
                                    <div style="border-radius:5px 5px 5px 5px;height:30px;width:70px;background-color:#d0c8c8">
                                        <div class="sb-nav-link-icon"><a href="/Admin/Product/Create" style="text-decoration:none"><i class="fas fa-plus" style="margin-right:2px"></i>Create</a></div>
                                    </div>
                                </th>
                                <th></th>
                            </tr>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.id_product)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.name_product)
                                    </td>
                                    <td>
                                        @{
                                            string path = "~/Images/" + item.image;
                                        }
                                        <img class="default-img" src="@Url.Content(path)" height="50" width="50" alt="#">
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.old_price)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.new_price)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.quantity)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Description)
                                    </td>
                                    <td>
                                        <div style="display:flex;margin-left:20px">
                                            <div class="sb-nav-link-icon"><a href="/Admin/Product/Edit/@item.id_product"><i class="fas fa-edit"></i></a></div> &nbsp;|&nbsp;
                                            <div class="sb-nav-link-icon"><a href="/Admin/Product/Delete/@item.id_product"><i class="fas fa-trash"></i></a></div>
                                        </div>
                                    </td>
                                </tr>
                            }

                        </table>

                    </div>
                </div>
            </div>
        </main>




</body>
</html>
