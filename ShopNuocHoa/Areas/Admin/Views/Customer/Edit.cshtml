@model ShopNuocHoa.Models.account

@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout1.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<body>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h2 style="margin-left:40%">EDIT</h2>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.id_account)


        <div class="row" style="padding-bottom:10px">
            <div class="col-md-4" style="text-align:center">
                Username
            </div>
            <div class="col-md-6">
                @Html.EditorFor(model => model.username, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.username, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="row" style="padding-bottom:10px">
            <div class="col-md-4" style="text-align:center">
                @Html.Label("Password")
            </div>
            <div class="col-md-6">
                @Html.EditorFor(model => model.passwords, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.passwords, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="row" style="padding-bottom:10px">
            <div class="col-md-4" style="text-align:center">
                Name
            </div>
            <div class="col-md-6">
                @Html.EditorFor(model => model.name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="row" style="padding-bottom:10px">
            <div class="col-md-4" style="text-align:center">
                @Html.Label("Date of birth")
            </div>
            <div class="col-md-6">
                @Html.EditorFor(model => model.date, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.date, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="row" style="padding-bottom:10px">
            <div class="col-md-4" style="text-align:center">
                Gender
            </div>
            <div class="col-md-6">
                @Html.EditorFor(model => model.gender, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.gender, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="row" style="padding-bottom:10px">
            <div class="col-md-4" style="text-align:center">
                Email
            </div>
            <div class="col-md-6">
                @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="row" style="padding-bottom:10px">
            <div class="col-md-4" style="text-align:center">
                Address
            </div>
            <div class="col-md-6">
                @Html.EditorFor(model => model.address, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.address, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="row" style="padding-bottom:10px">
            <div class="col-md-4" style="text-align:center">
                Role
            </div>
            <div class="col-md-6">
                <div class="checkbox">
                    @Html.EditorFor(model => model.rol)
                    @Html.ValidationMessageFor(model => model.rol, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="row" style="padding-bottom:10px">
            <div class="col-md-4" style="text-align:center">
                Image
            </div>
            <div class="col-md-6">
              <input type="file" name="ImageFile" />
            </div>
        </div>
        <div class="row" style="padding-bottom:10px">
            <div class="col-md-4" style="text-align:center">
                Date create
            </div>
            <div class="col-md-6">
                @Html.EditorFor(model => model.date_create, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.date_create, "", new { @class = "text-danger" })
            </div>
        </div>






        <div class="row" style="padding-bottom:10px">
            <div class="col-md-6">
                <input type="submit" value="Save" class="btn btn-default" style="margin-left:25%;background-color:#0094ff" />
                <a href="/Admin/Customer"><input type="button" value="Back" class="btn btn-default" style="background-color:#0094ff" /></a>

            </div>

        </div>
    </div>
    }





</body>
</html>
